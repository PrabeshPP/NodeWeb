<%- include("../includes/head.ejs")%>
<link href="../../styles/style.css" rel="stylesheet"/>
</head>
<body>
    <div  class="h-100v w-12/12 bg-contain bg-center bg-no-repeat
    flex items-center justify-center " style="background-image:url('../../assets/login.svg') ;">
        <div class="h-max  w-[50vw] bg-black bg-opacity-60 backdrop-blur-[12px] rounded-[12px]  flex items-center flex-col">
                <div class="w-[100%] text-center">
                    <h1 class="text-[2.5rem] font-bold text-white"><%=header%></h1>
                </div>

                <%# Login Form %>

                <form class="w-[90%] h-max flex flex-col items-center " method="post"  action="<%=postPath%>" >
                    <div class="flex flex-col mt-6 h-max w-[60%] pl-10 box-border">

                    <%# Email %>

                        <label class="text-white font-bold text-lg">E-mail</label>
                       
                        <input class="w-[90%] h-[7vh] outline-none border-none pl-5  box-border rounded-lg" type="email" name="email"/>
                    </div>

                    <%# Password %>

                    <div class="flex flex-col mt-6 h-max w-[60%] pl-10 box-border">
                        <label class="text-white font-bold text-lg">Password</label>
                        <input class="w-[90%] h-[7vh] outline-none border-none pl-5  box-border rounded-lg " type="password" name="password"/>
                    </div>
                    
                    
                    <button  class="bg-red-400  mt-12 w-[40%] h-[6vh] rounded-lg cursor-pointer hover:bg-teal-700 text-white font-bold shadow-md shadow-red-50">Login</button>
                </form>
                <span class="text-white select-none mt-10 mb-10">Don't have account?<a class="hover:text-pink-500 font-bold " href="<%=signUpLink%>">Sign Up</a></span>
                
        </div>
    </div>
</body>
</html>